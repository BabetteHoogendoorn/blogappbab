doctype html
html
  title The best blogApp!
  h1 These are your posts!
  head
  body
    each post in allOwnPosts
      h2= post.title
      h3= post.body
      each comm in post.comments
        p=comm.body
      form(action='/comments', method='post')
        label(for='name') comment:
        input#name(type='text' name="comment")
        input(name='id' value="#{post.id}" hidden)
        button(type='submit') Submit comment



    br
    a(href='/createpost') create post
    br
    a(href='/posts') see your own posts
    br
    a(href='/allposts') see posts of others
    br
    a(href='/') home
    br
    a(href='/logout') log out
