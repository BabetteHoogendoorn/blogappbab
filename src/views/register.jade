doctype html
html
	title The best blogApp!
	head
	h1 Register here!
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script.
			$(document).ready(function () {
				$('#submit').click(function(event) {
					if($('#email').val().trim().length === 0 || $('#password').val().trim().length === 0 || $('#name').val().trim().length === 0) {
						event.preventDefault();
						$('#error-message').html("Your username or password is empty.");
					}
				});
			});
	body
		if user
			a(href='/profile') view profile
			br
			a(href='/logout') log out
		else
			form(action='/register' method='post')
				label name
				input#name(name='name' required)
				label email
				input#email(name='email' required)
				label password
				input#password(name='password' required)
				input(type='submit' value='register' id='submit')
		h2#error-message= message
		#nav
